# Django Secret Key
DJANGO_SECRET_KEY=your-very-secret-key

# Debug Mode (Set to False in Production)
DJANGO_DEBUG=True

# Allowed Hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your_domain.com

# PostgreSQL Database Credentials
POSTGRES_DB=fitness_db
POSTGRES_USER=fitness_user
POSTGRES_PASSWORD=fitness_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Email Configuration (Gmail, SendGrid, or SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# CORS Allowed Origins (For API access from Frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://yourfrontend.com